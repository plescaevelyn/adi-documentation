{
  "image": "python:latest",
  "name": "Documentation editor",
  "customizations": {
    "codespaces": {
      "openFiles": ["docs/index.rst"]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "autoPull": "false"
    }
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r docs/requirements.txt",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "adoc serve -p 8080"
  },
  "portsAttributes": {
    "8000": {
      "label": "live-editor",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8080]
}
